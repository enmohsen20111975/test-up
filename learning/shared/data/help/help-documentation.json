                    {
                        "id": "circuit-analysis-guide",
                        "title": "Circuit Analysis Guide",
                        "slug": "circuit-analysis",
                        "content": {
                            "overview": "A comprehensive guide to analyzing electrical circuits using various methods.",
                            "methods": [
                                {
                                    "name": "Ohm's Law",
                                    "description": "The most basic circuit analysis method. Use when you know two of V, I, or R.",
                                    "formula": "V = I × R"
                                },
                                {
                                    "name": "Kirchhoff's Current Law (KCL)",
                                    "description": "Sum of currents entering a node equals sum of currents leaving.",
                                    "formula": "ΣI_in = ΣI_out"
                                },
                                {
                                    "name": "Kirchhoff's Voltage Law (KVL)",
                                    "description": "Sum of voltages around any closed loop equals zero.",
                                    "formula": "ΣV = 0"
                                },
                                {
                                    "name": "Nodal Analysis",
                                    "description": "Apply KCL at nodes to solve for node voltages."
                                },
                                {
                                    "name": "Mesh Analysis",
                                    "description": "Apply KVL around meshes to solve for mesh currents."
                                }
                            ]
                        }
                    }
                ]
